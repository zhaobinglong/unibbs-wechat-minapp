.page_list_headimg{
    width:40rpx;
    height:40rpx;
    border-radius:50%;
    margin-right:12rpx;
}

.between{justify-content: space-between!important;}


.flex{ 
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  flex-wrap: nowrap;
  align-items: center;
}

