
.replay_top{
  margin-bottom:24rpx;
}
.detail_img_top{
  width:100%;
}
.swiper_item{
  width:100%;
}
.detail_address{
  color:#808080;
  font-size:24rpx;
  margin-bottom:24rpx;
}
.detail_cont{
  line-height:36rpx!important;
}
.detail_cont_item{
  border-bottom:1rpx solid #f1f1f1;
  line-height:100rpx;
}
.detail_cont_address{
  font-size:24rpx;
  display:flex;
  flex-wrap:nowrap;
  justify-content:center;
}
.detail_message{
  padding:40rpx;
  font-size:24rpx;
}
.detail_message_top{
  font-size:28rpx;
  margin-bottom:10rpx;
}
.detail_message_input_box{
  display:flex;
  flex-wrap:nowrap;
}
.detail_message_input{
  padding:0 36rpx;
  height:72rpx;
  font-size:28rpx;
  flex-grow:1;
  border-radius: 8rpx;
  background-color: #f4f4f4;
  margin-right:10rpx;
}
.detail_message_button{
  color:#FFF;
  flex-grow:1;
  background-color:#65b997;
  text-align:center;
  line-height:80rpx;
  display:inline-block;
  height:80rpx;
  border-radius:0!important;
  border:none!important;
}
.detail_message_img{
  width:80rpx;
  height:80rpx;
  border-radius:50%;
  
}
.detail_message_item{
  border-bottom:1rpx solid #efefef;
  padding:40rpx 0;
  flex-wrap:nowrap;
}
.replay_message_item_img{
  width:80rpx;
  height:80rpx;
  position:absolute;
  left:0;
  top:20rpx;
}
.replay_message_item_time{
  position:absolute;
  right:0;
  top:20rpx;
}
.detail_message_item_left{
  width:80rpx;
  margin-right:40rpx;
}
.detail_message_item_right{
  flex-grow:1;
}
.detail_message_item_name{
  color:#999;
}
.detail_message_item_tag{
  color:#8a8a8a;
}
.detail_button_box{
  position:fixed;
  bottom:8rpx;
  left:0;
  right:0;
  height:80rpx;
  display:flex;
  align-items:center;
  background-color:#FFF;
  z-index:99;
  padding: 0 40rpx;
}
.button{
  flex-grow:1;
  margin:0;
  border:none;
  border-top:1px solid rgba(0, 0, 0, 0.2);
}
button::after{
  border:none;
}
.replay_message_item{
  border-bottom:1rpx solid #f1f1f1;
  padding:20rpx 0;
  min-height:120rpx;
}
.replay_message_item_right{
  flex-direction:column;
  padding-left:100rpx;
  line-height:30rpx;
}
.replay_message_item_nickname{
  margin-bottom:20rpx;
}

